<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

	<changeSet id="1" author="Shahida">
		<createTable tableName="teachers">
			<column name="emp_id" type="int">
				<constraints primaryKey="true" />
			</column>
			<column name="name" type="VARCHAR" />
		</createTable>
	</changeSet>

	<changeSet id="2" author="Shahida">
		<sqlFile path="classpath:db/changelog/ddl/tables.sql"
			splitStatements="true" />

	</changeSet>

	<changeSet id="3" author="Shahida">
		<sql>
			ALTER TABLE department RENAME COLUMN deptid TO dept_id
		</sql>
	</changeSet>


	<changeSet id="7" author="Shahida">
		<createTable tableName="student">
			<column name="roll_name" type="SERIAL">
				<constraints primaryKey="true" />
			</column>
			<column name="name" type="VARCHAR" />
			<column name="score" type="int"></column>
		</createTable>
	</changeSet>
</databaseChangeLog>